{% extends "/layout_default.jinja2" %}

{% block content %}
  <div class="page-header">
    <h1>Reset Password</h1>
  </div>

  <form action="{{ request.route_path('users', action='reset_password') }}" class="form-horizontal" id="reset-password-form" method="post" novalidate="">
    <div style="display: none;">
      <input name="csrf_token" type="hidden" value="{{ request.session.get_csrf_token() }}" />
      <input name="token" type="hidden" value="{{ params['token'] or '' }}" />
    </div>

    <div class="form-group {{ 'has-error' if errors['email'] }}">
      <label class="control-label col-sm-2 required" for="email">Email</label>
      <div class="col-sm-10 col-md-8">
        <input id="email" class="form-control" type="email" name="email" value="{{ params['email'] or '' }}" placeholder="Email" required />
        {% if errors['email'] %}
          <span class="help-block">{{ errors['email'] }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group {{ 'has-error' if errors['password'] }}">
      <label class="control-label col-sm-2 required" for="password">Password</label>
      <div class="col-sm-10 col-md-8">
        <input id="password" class="form-control" type="password" name="password" value="" placeholder="Password" required />
        {% if errors['password'] %}
          <span class="help-block">{{ errors['password'] }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group {{ 'has-error' if errors['confirm'] }}">
      <label class="control-label col-sm-2 required" for="confirm">Confirm</label>
      <div class="col-sm-10 col-md-8">
        <input id="confirm" class="form-control" type="password" name="confirm" value="" placeholder="Confirm" required />
        {% if errors['confirm'] %}
          <span class="help-block">{{ errors['confirm'] }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" type="submit">Reset Password</button>
      </div>
    </div>
  </form>
{% endblock %}
