{% extends "/layout_default.jinja2" %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
  <div class="page-header">
    <h1>Forgot Password</h1>
  </div>

  <form id="forgot-password-form" class="form-horizontal" action="{{ request.route_path('users', action='forgot_password') }}" method="post">
    <div style="display: none;">
      <input name="csrf_token" type="hidden" value="{{ request.session.get_csrf_token() }}" />
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2 required" for="email">Email</label>
      <div class="col-sm-10 col-md-8">
        <input id="email" class="form-control" type="email" name="email" value="{{ params['email'] or '' }}" placeholder="Email" required />
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" type="submit">Submit</button>
      </div>
    </div>
  </form>
{% endblock %}
